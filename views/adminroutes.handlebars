<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css"/>
<link href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css"/>
<style>
    body {
        margin-top: 20px;
        background-color: white;
    }
    .dataTables_filter{
        margin-left: 28em !important;
    }
    #example_paginate{
        margin-left: 33em !important;
}
</style>
<center>
<h2 style="color: rgb(187, 9, 9);">All Routes and AmountsðŸ›£:</h2>

</center>

<div class="container">
    <table class="table table-striped mt-4" id="example" style="text-align: center;">
        <thead>
        <tr>
            <th>Id</th>
            <th>PickUp</th>
            <th>Destination</th>
            <th>Amount</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each data}}
        <tr>

            <td>{{this.dataValues.amount_id}}</td>
            <td>{{this.dataValues.pickup}}</td>
            <td>{{this.dataValues.destination}}</td>
            <td>{{this.dataValues.amount}}</td>
            <td>
                <a href="/updateroute/{{this.dataValues.amount_id}}">Edit</a> |
                <a href="/deleteroute/{{this.dataValues.amount_id}}" class="text-danger"
                    onclick="return confirm('Are you sure you want to delete this')">Delete</a>
            </td>
        </tr>
        {{/each}}
        </tbody>
    </table>
    <p class="text-end">You are logged in as: ADMIN
    </p>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js" ></script>
<script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js" ></script>
<script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js" ></script>
<script>
$(document).ready(function () {
    $('#example').DataTable();
});
</script>