{{!-- {{>navbar}} --}}
<div style="background-color: rgb(142, 93, 1) ;">
    <center><a href="/home">Back to home page</a></center>

    <center>

        <video width="960" height="400" loop control autoplay muted>

            <source src="/static/image/loginnw.mp4" type="video/mp4">
            <source src="/static/image/loginnw.mp4" type="video/ogg">

        </video>

        <form  method="post">


            <table cellspacing="2" cellpadding="3"
                style="color: white; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">

                <tr>
                    <td>
                        <label for="title">Title</label>
                    </td>

                    <td>
                        <select id="title" name="title">
                            <option value="Mr.">Mr.</option>
                            <option value="Mrs.">Mrs.</option>
                            <option value="Ms.">Ms.</option>
                        </select>
                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="firstName">First Name:</label>
                    </td>

                    <td>
                        <input type="text" id="firstName" placeholder="Enter First Name of the Passenger"
                            name="firstName" />
                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="lastName">Last Name:</label>
                    </td>

                    <td>
                        <input type="text" id="lastName" placeholder="Enter Last Name of the Passenger"
                            name="lastName" />
                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="gender">Gender:</label>
                    </td>
                    <td>
                        <input type="radio" id="male" name="gender" value="Male" />Male
                        <input type="radio" id="female" name="gender" value="Female">Female
                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="dob">Date of Birth:</label>
                    </td>

                    <td>
                        <input type="date" id="dob" placeholder="Enter Date of Birth" name="dob" />
                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="phoneNumber">Phone Number:</label>
                    </td>

                    <td>
                        <input type="number" id="phoneNumber" name="phoneNumber" placeholder="Enter Your Phone Number"
                            maxlength="10" required />
                    </td>
                </tr>

                <tr>
                    <td>
                        <label for="email">Email:</label>
                    </td>

                    <td>
                        <input type="email" id="email" placeholder="Enter your email Address" name="email" />
                    </td>
                </tr>


                <tr>
                    <td>
                        <label for="address">Address:</label>
                    </td>

                    <td>
                        <textarea id="address" name="address" placeholder="Enter your Address" rows="6"
                            cols="20"></textarea>

                    </td>
                </tr>


                <tr>
                    <td>
                        <label for="communication">Communication Preference:</label>
                    </td>

                    <td>
                        <input type="radio" id="email" name="communication" value="1" />Email
                        <input type="radio" id="sms" name="communication" value="2">SMS
                    </td>
                </tr>

                <tr>
                    <td>
                        <input type="checkbox" id="checkbox" />
                        <label for="checkbox"> I agree to the <a href="">Terms and Conditions</a> of the
                            website.</label>
                    </td>
                </tr>

                <tr>
                    <td>
                        <input type="submit" onclick="saveData();" id="Register" name="Register" value="Register" />
                    </td>

                    <td>
                        <input type="Reset" id="Reset" name="Reset" value="Reset" />
                    </td>
                </tr>

            </table>
            <p style="color: red;">{{message}}</p>
        </form>
    </center>
</div>